{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
      "preserveConstEnums": true,
      "module": "es2022",
      "moduleResolution": "node",
      "target": "es2017",
      "outDir": "target",
      "esModuleInterop": true
    },
    "include": ["src/**/*", "src/*"],
    "exclude": ["**/*.spec.ts"],
    "ts-node": {
      "esm": true
    }
}